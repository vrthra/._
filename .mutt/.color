#
# Color definitions
#
color normal     white  default # normal text
color indicator  red         default # actual message
color tree       red  default # thread arrows
color status     black         default # status line
color error      red      default # errors
color message    red        default # info messages
color signature  brightred default # signature
color attachment white   default# MIME attachments
color search     brightyellow default# search matches
color tilde      blue           default # ~ at bottom of msg
color markers    red            default # + at beginning of wrapped lines
color hdrdefault blue           default # default header lines
color bold       red            default # hiliting bold patterns in body
color underline  green          default # hiliting underlined patterns in body
color quoted    red            default
color quoted1    white          default
color quoted2    red            default
color quoted3    white          default
color quoted4    red            default
color quoted5    white          default
color quoted6    red            default
color quoted7    white          default
color quoted8    red            default
color quoted9    white          default # quoted text
color body   cyan  default  "((ftp|http|https)://|news:)[^ >)\"\t]+"
color body   cyan  default  "[-a-z_0-9.+]+@[-a-z_0-9.]+"
color body   red   default  "(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
color body   green default  "(^| )_[-a-z0-9_]+_[,.?]?[\n]"
color body   red   default  "(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
color body   green default  "(^| )_[-a-z0-9_]+_[,.?]?[ \n]"

color index         magenta         default  ~N         # New
color index         cyan        default  ~D         # Deleted
color index         yellow      default  ~O      # Old
color index         brightyellow     default  ~F      # Flagged
color index         blue        default  ~T      # Tagged
#color sidebarnew green default
color sidebar_new green default
#color index         blue       default  ~p
color index         green       default  '~p ~N'
